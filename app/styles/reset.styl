@import 'global'

html, body
  margin: 0
  padding: 0

body
  font: 16px/1.2 font-stack
  background-color c-mid
  color: c-dark

h1, h2, h3
  font-size: 1em
  font-weight: normal
  margin: 0

button
  font: 1em font-stack
  margin: 0

a
  text-decoration: none
  color: inherit

ul, ol
  list-style: none
  margin: 0
  padding: 0

input[type='text'],
input[type='url']
  -webkit-appearance: none;
  border-radius: 0
