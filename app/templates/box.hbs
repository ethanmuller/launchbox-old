{{#if isEditing}}
  <div class="sp float-clear">
    <div class="l-half with-margin">
      <button {{action 'cancelEdits'}} class="btn alt sm l">Cancel</button>
    </div>

    <div class="l-half with-margin">
      <button {{action 'saveEdits'}} class="btn sm positive r">Save</button>
    </div>
  </div>
{{/if}}

{{#if isEditable}}
  <div class="clearfix sp">
    <button {{action 'edit'}} class="btn alt inline sm r">Edit</button>
  </div>
{{/if }}

<ol class="float-clear">
  {{#each l in myLinks}}
    <li {{bind-attr class='l.isLast:last l.isLast:sp_lg :chunky-box'}}>
      {{link-list-item model=l.link isEditing=isEditing}}
    </li>
  {{/each}}
</ol>

{{#unless isEditing}}
  <div class="float-clear">
    <div class="chunky-box last pad">
      <form novalidate>
        <div class="sp">
          {{input type='text' value=name placeholder='Name'}}
        </div>
        <div class="sp">
          {{input type='url' value=url placeholder='URL'}}
        </div>
        <div>
          <button {{bind-attr disabled=isInvalid class=':btn'}}>Submit</button>
        </div>
      </form>
    </div>
  </div>
{{/unless}}
