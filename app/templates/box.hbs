{{!--
<div>
  {{#if isEditing}}
    <button {{action 'cancelEdits'}}>Cancel</button>
    <button {{action 'saveEdits'}}>Save</button>
  {{else}}
    <button {{action 'edit'}}>Edit</button>
  {{/if}}
</div>
--}}

<ol>
  {{#each links}}
  <li class="chunky-box">
  {{render 'link' this}}
  </li>
  {{/each}}
</ol>

<div class="chunky-box last pad">
  <form>
    <div class="sp">
      {{input type='text' class='big' value=name placeholder='Name'}}
    </div>
    <div class="sp">
      {{input type='text' value=url placeholder='URL'}}
    </div>
    <div>
      <button {{bind-attr disabled=isInvalid class=':btn'}}>Submit</button>
    </div>
  </form>
</div>
